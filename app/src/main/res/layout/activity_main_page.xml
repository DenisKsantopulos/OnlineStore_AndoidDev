<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="50dp"-->
<!--        android:layout_marginStart="20dp"-->
<!--        android:ems="10"-->
<!--        android:hint="Search"-->
<!--        android:inputType="text"-->
