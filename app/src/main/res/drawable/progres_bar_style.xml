<!-- In your drawable folder, create custom_progress_drawable.xml -->
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360" >

    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false" >
        <size
            android:height="48dp"
            android:width="48dp" />
        <gradient
            android:endColor="@color/defColor"
            android:startColor="#251146"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>